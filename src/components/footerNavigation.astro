---
const { backlink, backtitle, forwardlink, forwardtitle } = Astro.props;
---


<style>
    .direction-icon {
        border: none;
        width: 3em;

    }

    .footer-nav-container {
        width: 100%;
        display: flex;
        flex-direction: row;
        gap: 2em;
    }

    .footer-nav-text {
        font-weight: 500;
        font-size: 24px;
    }

    .footer-nav-side {
        width: 100%;
        border-radius: 10px;
        background-color: var(--color-elevated);
        flex-grow: 1;
        display: flex;
        align-items: center;
        padding: 0rem 1.2rem 0rem 1.2rem;
        transition: all 0.2s ease-out;
        
    }

    .footer-nav-side:hover {
        color: var(--color-red);
    }

    .left:hover {
        translate: -5%;
    }

    .right:hover {
        translate: 5%;
    }

    .flex-grow {
        flex-grow: 1;
    }


</style>

<div class="footer-nav-container">
    { backlink &&
    <a href={backlink}  class="footer-nav-side left">
        <img src="https://icons.hackclub.com/api/icons/hackclub-smoke/view-back" class="direction-icon">
        <span class="flex-grow"></span>
        <p class="footer-nav-text">{backtitle}</p>
    </a>
    }
    
    { forwardlink && 
    <a href={forwardlink}  class="footer-nav-side right">
        <p class="footer-nav-text">
            {forwardtitle}
        </p>
        <span class="flex-grow"></span>
        <img src="https://icons.hackclub.com/api/icons/hackclub-smoke/view-forward" class="direction-icon ">
    </a>
    
    }
    
</div>
